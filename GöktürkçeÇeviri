
print("""

           Göktürkçe Çeviri

İstediğiniz Türkçe kelimeyi Göktürkçe'ye çevirebilirsiniz





""")

Text = ""
anahtar = 1

while anahtar == 1:
    islem = str(input("Çevirmek İstediğiniz Şeyi girin "))
    Kelime = list(islem)
    for Veri in Kelime:
        if Veri == "a":
            print("𐰀")
            Text = Text + "𐰀"

        elif Veri == "b":
            print("𐰋")
            Text = Text + "𐰋"

